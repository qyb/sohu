<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    
    	<RelativeLayout
    		android:id="@+id/bottom_tools"
    		android:orientation="horizontal"
    		android:layout_height="48dip"
    		android:layout_width="match_parent"
    		android:layout_alignParentBottom="true"
    		android:layout_weight="1"
    		android:background="@drawable/bg_bottom_white"
    	>
    	<ImageView 
    		android:id="@+id/read"
    		android:layout_width="28dip"
    		android:layout_height="wrap_content"
    		android:layout_centerVertical="true"
    		android:layout_marginLeft="50dip"
    		android:src="@drawable/sohu_mark_read"
    	/>
    	<ImageView 
    		android:id="@+id/delete_bookmark"
    		android:layout_width="28dip"
    		android:layout_height="wrap_content"
    		android:layout_centerVertical="true"
    		android:layout_marginLeft="50dip"
    		android:src="@drawable/sohu_delete"
    		android:visibility="invisible"
    	/>
    	<com.sohu.kan.SlideButton android:id="@+id/btn_slide"
	        android:layout_width ="125dip"
	        android:layout_height="45dip"
	        android:layout_centerHorizontal="true"
   			android:layout_marginBottom="-16dip"
	        android:clickable ="true"
	        />
    	<ImageView
    		android:id="@+id/share"
    		android:layout_width="28dip" 
	   	 	android:layout_height="wrap_content" 
	   	 	android:layout_alignParentRight="true"
	   	 	android:layout_marginRight="50dip"
	   	 	android:layout_centerVertical="true"
	   	 	android:src="@drawable/sohu_share_read"
    	/>
    	</RelativeLayout>
    	<RelativeLayout
    		android:id="@+id/fontsize"
    		android:orientation="horizontal"
    		android:layout_height="48dip"
    		android:layout_width="match_parent"
    		android:background="@drawable/bg_bottom_white"  
    		android:layout_alignParentBottom="true"
    		android:visibility="gone"
    	>
    	<ImageView
    		android:id="@+id/reduce"
    		android:layout_width="28dip"
    		android:layout_height="wrap_content"
    		android:textColor="#000000" 
    		android:textSize="14dip" 
    		android:layout_centerVertical="true"
    		android:layout_marginLeft="50dip"
    		android:src="@drawable/sohu_a_minus"
    	/>
    	<Button
    		android:id="@+id/normal"
    		android:layout_width="98dip"
    		android:layout_height="wrap_content"
    		android:textColor="#707070" 
    		android:textSize="16dip" 
    		android:layout_centerVertical="true"
    		android:layout_centerHorizontal="true"
    		android:layout_marginBottom="-16dip"
    		android:background="@drawable/sohu_btn_gray"
    		android:text="恢复默认"
    	/>
    	<ImageView 
    		android:id="@+id/increase"
    		android:layout_width="28dip"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:textColor="#000000" 
    		android:textSize="14dip"
    		android:layout_alignParentRight="true"
    		android:layout_centerVertical="true"
    		android:layout_marginRight="50dip"
    		android:src="@drawable/sohu_a_plus"
    	/>
    	</RelativeLayout>
    	<WebView 
	    	android:id="@+id/webview"
	    	android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:layout_above="@+id/bottom_tools"
	    	android:scrollbarSize="0dip"
	    	android:layout_marginBottom="-4dip"
	    />
	    <RelativeLayout
	    	android:id="@+id/read_guide"
	    	android:layout_width="match_parent"
		 	android:layout_height="match_parent"
		 	android:background="@drawable/read_guide"
	    >
	 </RelativeLayout>
</RelativeLayout>