<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >
  
  <RelativeLayout
  	android:orientation="vertical"
  	android:layout_width="match_parent"
  	android:layout_height="match_parent"
  	android:background="@drawable/repeat_bg"
  >
  <TextView 
  	android:id="@+id/list_title"
  	android:layout_width="match_parent"
  	android:layout_height="wrap_content"
  	android:gravity="center"
  	android:layout_alignParentTop="true"
  	android:background="@drawable/bg_title"
  	android:textSize="18dip"
  	android:textColor="#FFFFFF"
  />
    <FrameLayout 
    	android:id="@+id/bottom_content"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_alignParentBottom="true"
    >
    	<RelativeLayout
    		android:id="@+id/list_bottom_tools"
    		android:orientation="horizontal"
    		android:layout_height="48dip"
    		android:layout_width="match_parent"
    		android:background="@drawable/bg_bottom_white"
    	>
    	<ImageView 
    		android:id="@+id/refresh"
    		android:layout_width="26dip"
    		android:layout_height="26dip"
    		android:layout_centerVertical="true"
    		android:layout_marginLeft="8dip"
    		android:src="@drawable/sohu_refresh"
    	/>
    	<RelativeLayout 
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:padding="5dip"
    	>
	    	<EditText 
	    		android:id="@+id/filter"
	    		android:layout_width="218dip"
		   	 	android:layout_height="48dip"
	    		android:textSize="14dip"
	    		android:paddingLeft="36dip"
	    		android:singleLine="true"
	   			android:layout_centerInParent="true"
	   			android:background="@drawable/edittext_frame"
	   			android:textColorHint="#707070"
		    	android:hint="过滤标题,网址"
	    	/>
	    	<ImageView 
		    	android:src="@drawable/ic_search"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_alignTop="@+id/filter"
		    	android:layout_alignLeft="@+id/filter"
		    	android:layout_alignBottom="@+id/filter"
		    />
    	</RelativeLayout>
    	<ImageView
    		android:id="@+id/sort"
    		android:layout_width="26dip" 
	   	 	android:layout_height="26dip" 
	   	 	android:layout_alignParentRight="true"
	   	 	android:layout_marginRight="8dip"
	   	 	android:layout_centerVertical="true"
	   	 	android:src="@drawable/sohu_sort"
    	/>
    	</RelativeLayout>
    	<RelativeLayout
    		android:id="@+id/set_articles_read"
    		android:orientation="horizontal"
    		android:layout_height="48dip"
    		android:layout_width="match_parent"
    		android:background="@drawable/bg_bottom_white"
    		android:visibility="gone"
    	>
    	<Button
    		android:id="@+id/cancel_set_read"
    		android:layout_width="78dip"
    		android:layout_height="wrap_content"
    		android:textColor="#313131" 
    		android:textSize="16dip" 
    		android:layout_centerVertical="true"
    		android:background="@drawable/sohu_btn_gray" 
    		android:layout_marginLeft="14dip"
    		android:text="取 消"
    	/>
    	<Button
    		android:id="@+id/sign_num_read"
    		android:layout_width="138dip"
    		android:layout_height="wrap_content"
    		android:textColor="#ffffff" 
    		android:textSize="16dip" 
    		android:layout_centerVertical="true"
    		android:background="@drawable/sohu_btn_green" 
    		android:layout_alignParentRight="true"
    		android:layout_marginRight="14dip"
    		android:text="标记0条为已读"
    	/>
    	</RelativeLayout>
    	<RelativeLayout
    		android:id="@+id/confirm"
    		android:orientation="horizontal"
    		android:layout_height="48dip"
    		android:layout_width="match_parent"
    		android:background="@drawable/bg_bottom_white"
    		android:visibility="gone"
    	>
    	<Button
    		android:id="@+id/cancel"
    		android:layout_width="78dip"
    		android:layout_height="wrap_content"
    		android:textColor="#313131" 
    		android:textSize="16dip" 
    		android:layout_centerVertical="true"
    		android:background="@drawable/sohu_btn_gray" 
    		android:layout_marginLeft="14dip"
    		android:text="取 消"
    	/>
    	<Button
    		android:id="@+id/delete"
    		android:layout_width="78dip"
    		android:layout_height="wrap_content"
    		android:textColor="#ffffff" 
    		android:textSize="16dip" 
    		android:layout_toRightOf="@+id/cancel"
    		android:layout_centerVertical="true"
    		android:background="@drawable/sohu_btn_delete" 
    		android:layout_marginLeft="8dip"
    		android:text="删 除"
    	/>
    	<TextView 
    		android:id="@+id/sign_num"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:textColor="#000" 
    		android:textSize="16dip"
    		android:layout_marginRight="14dip"
    		android:layout_alignParentRight="true"
    		android:layout_centerVertical="true"
    		android:text="标记 0 条"
    	/>
    	</RelativeLayout>
    </FrameLayout>
    <RelativeLayout
    	android:id="@+id/relative_list"
    	android:orientation="vertical"
  		android:layout_width="match_parent"
  		android:layout_height="wrap_content"
  		android:layout_above="@+id/bottom_content"
  		android:layout_below="@+id/list_title"
  		android:layout_centerInParent="true"
  		android:layout_marginTop="-5dip"
    	android:layout_marginBottom="-4dip"
    >
    <ListView 
    	android:id="@+id/list"
    	android:scrollbars="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:fadingEdgeLength="0dip"
    	android:fadingEdge="none"
    	android:scrollingCache="false"
    	android:cacheColorHint="#CCCCCC"
    />
    <TextView
   		android:id="@+id/divide_line"
   		android:layout_width="match_parent"
   		android:layout_height="1dip"
   		android:layout_below="@+id/list"
   		android:background="#E7E9E9"
   	/>
   	</RelativeLayout>
    <RelativeLayout 
    	android:id="@+id/empty_layout"
    	android:orientation="vertical"
  		android:layout_width="match_parent"
  		android:layout_height="wrap_content"
  		android:layout_above="@+id/bottom_content"
  		android:layout_below="@+id/list_title"
  		android:layout_centerInParent="true"
    >
    <TextView
    	android:id="@+id/empty_list"
    	android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_marginBottom="60dip"
  		android:textSize="18dip"
  		android:textColor="#707070"
  		android:layout_centerHorizontal="true"
  		android:layout_centerVertical="true"
  		android:layout_above="@+id/guide"
  		android:text="没有任何记录"
    />
    <Button
    	android:id="@+id/guide"
    	android:layout_width="112dip"
  		android:layout_height="wrap_content"
  		android:background="@drawable/btn_green"
  		android:textColor="#FFFFFF"
  		android:layout_centerInParent="true"
  		android:textSize="18dip"
  		android:visibility="gone"
  		android:text="收藏方法"
    />
    </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
    	android:id="@+id/unreadlist_guide"
    	android:layout_width="match_parent"
	 	android:layout_height="match_parent"
	 	android:background="@drawable/unreadlist_guide"
    >
	 </RelativeLayout>
</RelativeLayout>
